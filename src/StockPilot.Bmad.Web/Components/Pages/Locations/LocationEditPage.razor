@page "/locations/new"
@page "/locations/{Id:guid}/edit"
@rendermode InteractiveServer
@inject ApiClient Api
@inject NavigationManager Nav

<PageTitle>@(_isNew ? "Nouvel emplacement" : "Modifier emplacement")</PageTitle>

<a href="/locations">← Retour aux emplacements</a>

<h2 class="mt-3">@(_isNew ? "Créer un emplacement" : "Modifier l'emplacement")</h2>

<ApiError Message="@_error" Details="@_errorDetails" />

@if (_loading)
{
    <p>Chargement...</p>
}
else
{
    <EditForm Model="_model" FormName="LocationEditForm" OnValidSubmit="SaveAsync">
        <DataAnnotationsValidator />

        @if (_isNew)
        {
            <div class="mb-3">
                <label class="form-label">Entrepôt</label>
                <select class="form-select" @bind="_model.WarehouseId">
                    <option value="@Guid.Empty">— Choisir —</option>
                    @foreach (var w in _warehouses)
                    {
                        <option value="@w.WarehouseId">@w.Name</option>
                    }
                </select>
            </div>
        }

        <div class="mb-3">
            <label class="form-label">Code</label>
            <InputText class="form-control" @bind-Value="_model.Code" />
        </div>

        <div class="mb-3">
            <label class="form-label">Label</label>
            <InputText class="form-control" @bind-Value="_model.Label" />
        </div>

        <button class="btn btn-primary" type="submit" disabled="@_saving">
            @(_saving ? "Enregistrement..." : "Enregistrer")
        </button>
        <a class="btn btn-secondary ms-2" href="/locations">Annuler</a>
    </EditForm>
}

@code {
    [Parameter] public Guid? Id { get; set; }

    private bool _isNew => Id is null;
    private bool _loading = true;
    private bool _saving;
    private string? _error;
    private string? _errorDetails;

    private List<WarehouseDto> _warehouses = new();

    private CreateLocationRequest _model = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _warehouses = await Api.GetWarehousesAsync() ?? new();

            if (_isNew)
                return;

            var loc = await Api.GetLocationAsync(Id!.Value);
            if (loc is null)
            {
                _error = "Emplacement introuvable.";
                return;
            }

            _model = new CreateLocationRequest
            {
                WarehouseId = loc.WarehouseId,
                Code = loc.Code,
                Label = loc.Label
            };
        }
        catch (ApiException ex) { _error = ex.Message; _errorDetails = ex.Body; }
        catch (Exception ex) { _error = ex.Message; }
        finally { _loading = false; }
    }

    private async Task SaveAsync()
    {
        _saving = true;
        _error = null;
        _errorDetails = null;

        try
        {
            if (_isNew)
            {
                var created = await Api.CreateLocationAsync(_model);
                try
                {
                    Nav.NavigateTo("/locations", forceLoad: true);
                }
                catch (NavigationException)
                {
                    // Expected exception from NavigateTo
                }
            }
            else
            {
                await Api.UpdateLocationAsync(Id!.Value, new UpdateLocationRequest { Code = _model.Code, Label = _model.Label });
                try
                {
                    Nav.NavigateTo("/locations", forceLoad: true);
                }
                catch (NavigationException)
                {
                    // Expected exception from NavigateTo
                }
            }
        }
        catch (ApiException ex) { _error = ex.Message; _errorDetails = ex.Body; }
        catch (Exception ex) { _error = ex.Message; }
        finally { _saving = false; }
    }
}
