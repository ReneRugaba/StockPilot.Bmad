@page "/warehouses/new"
@page "/warehouses/{Id:guid}/edit"
@rendermode InteractiveServer
@inject ApiClient Api
@inject NavigationManager Nav

<PageTitle>@(_isNew ? "Nouvel entrepôt" : "Modifier entrepôt")</PageTitle>

<a href="/warehouses">← Retour aux entrepôts</a>

<h2 class="mt-3">@(_isNew ? "Créer un entrepôt" : "Modifier l'entrepôt")</h2>

<ApiError Message="@_error" Details="@_errorDetails" />

@if (_loading)
{
    <p>Chargement...</p>
}
else
{
    <EditForm Model="_model" FormName="WarehouseEditForm" OnValidSubmit="SaveAsync">
        <DataAnnotationsValidator />

        <div class="mb-3">
            <label class="form-label">Nom</label>
            <InputText class="form-control" @bind-Value="_model.Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Adresse</label>
            <InputText class="form-control" @bind-Value="_model.Address" />
        </div>

        <button class="btn btn-primary" type="submit" disabled="@_saving">
            @(_saving ? "Enregistrement..." : "Enregistrer")
        </button>
        <a class="btn btn-secondary ms-2" href="/warehouses">Annuler</a>
    </EditForm>
}

@code {
    [Parameter] public Guid? Id { get; set; }

    private bool _isNew => Id is null;
    private bool _loading = true;
    private bool _saving;
    private string? _error;
    private string? _errorDetails;

    private UpdateWarehouseRequest _model = new();

    protected override async Task OnInitializedAsync()
    {
        if (_isNew)
        {
            _loading = false;
            return;
        }

        try
        {
            var wh = await Api.GetWarehouseAsync(Id!.Value);
            if (wh is null)
            {
                _error = "Entrepôt introuvable.";
                return;
            }

            _model = new UpdateWarehouseRequest { Name = wh.Name, Address = wh.Address };
        }
        catch (ApiException ex) { _error = ex.Message; _errorDetails = ex.Body; }
        catch (Exception ex) { _error = ex.Message; }
        finally { _loading = false; }
    }

    private async Task SaveAsync()
    {
        _saving = true;
        _error = null;
        _errorDetails = null;

        try
        {
            if (_isNew)
            {
                var created = await Api.CreateWarehouseAsync(new CreateWarehouseRequest { Name = _model.Name, Address = _model.Address });
                if (created is not null)
                {
                    try
                    {
                        Nav.NavigateTo($"/warehouses/{created.WarehouseId}", forceLoad: true);
                    }
                    catch (NavigationException)
                    {
                        // Expected exception from NavigateTo
                    }
                }
                else
                {
                    try
                    {
                        Nav.NavigateTo("/warehouses", forceLoad: true);
                    }
                    catch (NavigationException)
                    {
                        // Expected exception from NavigateTo
                    }
                }
            }
            else
            {
                await Api.UpdateWarehouseAsync(Id!.Value, _model);
                try
                {
                    Nav.NavigateTo($"/warehouses/{Id.Value}", forceLoad: true);
                }
                catch (NavigationException)
                {
                    // Expected exception from NavigateTo
                }
            }
        }
        catch (ApiException ex) { _error = ex.Message; _errorDetails = ex.Body; }
        catch (Exception ex) { _error = ex.Message; }
        finally { _saving = false; }
    }
}
