@page "/warehouses"
@inject ApiClient Api

<PageTitle>Entrepôts</PageTitle>

<h2>Entrepôts</h2>

<div class="mb-3">
    <a class="btn btn-primary" href="/warehouses/new">Nouvel entrepôt</a>
</div>

<ApiError Message="@_error" Details="@_errorDetails" />

@if (_loading)
{
    <p>Chargement...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th><th>Adresse</th><th>Statut</th><th>Créé le</th><th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var w in _warehouses)
            {
                <tr>
                    <td>@w.Name</td>
                    <td>@w.Address</td>
                    <td>@w.Status</td>
                    <td>@w.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-link" href="/warehouses/@w.WarehouseId">Détail</a>
                        <a class="btn btn-sm btn-outline-secondary" href="/warehouses/@w.WarehouseId/edit">Modifier</a>
                        <button class="btn btn-sm btn-outline-danger" disabled="@_busy" @onclick="() => CloseAsync(w.WarehouseId)">Fermer</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<WarehouseDto> _warehouses = new();
    private bool _loading = true;
    private bool _busy;
    private string? _error;
    private string? _errorDetails;

    protected override async Task OnInitializedAsync() => await ReloadAsync();

    private async Task ReloadAsync()
    {
        _loading = true;
        _error = null;
        _errorDetails = null;

        try { _warehouses = await Api.GetWarehousesAsync() ?? new(); }
        catch (ApiException ex) { _error = ex.Message; _errorDetails = ex.Body; }
        catch (Exception ex) { _error = ex.Message; }
        finally { _loading = false; }
    }

    private async Task CloseAsync(Guid id)
    {
        _busy = true;
        _error = null;
        _errorDetails = null;

        try
        {
            await Api.CloseWarehouseAsync(id);
            await ReloadAsync();
        }
        catch (ApiException ex) { _error = ex.Message; _errorDetails = ex.Body; }
        catch (Exception ex) { _error = ex.Message; }
        finally { _busy = false; }
    }
}
