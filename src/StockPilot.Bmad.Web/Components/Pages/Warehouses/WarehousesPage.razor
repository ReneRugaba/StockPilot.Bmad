@page "/warehouses"
@inject ApiClient Api

<PageTitle>Entrepôts</PageTitle>

<h2>Entrepôts</h2>

@if (_loading)
{
    <p>Chargement...</p>
}
else if (_error is not null)
{
    <div class="alert alert-danger">Erreur : @_error</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th><th>Adresse</th><th>Statut</th><th>Créé le</th><th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var w in _warehouses)
            {
                <tr>
                    <td>@w.Name</td>
                    <td>@w.Address</td>
                    <td>@w.Status</td>
                    <td>@w.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                    <td><a href="/warehouses/@w.WarehouseId">Détail</a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<WarehouseDto> _warehouses = new();
    private bool _loading = true;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        try { _warehouses = await Api.GetWarehousesAsync() ?? new(); }
        catch (Exception ex) { _error = ex.Message; }
        finally { _loading = false; }
    }
}
