@page "/clients"
@rendermode InteractiveServer
@inject ApiClient Api

<PageTitle>Clients</PageTitle>

<h2>Clients</h2>

<div class="mb-3">
    <a class="btn btn-primary" href="/clients/new">Nouveau client</a>
</div>

<ApiError Message="@_error" Details="@_errorDetails" />

@if (_loading)
{
    <p>Chargement...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th><th>Email</th><th>Statut</th><th>Créé le</th><th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in _clients)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.ContactEmail</td>
                    <td><StatusBadge Status="@c.Status" /></td>
                    <td>@c.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" href="/clients/@c.ClientId/edit">Modifier</a>
                        <button class="btn btn-sm btn-outline-danger" disabled="@_busy" @onclick="() => DisableAsync(c.ClientId)">Désactiver</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ClientDto> _clients = new();
    private bool _loading = true;
    private bool _busy = false;
    private string? _error;
    private string? _errorDetails;

    protected override async Task OnInitializedAsync() => await ReloadAsync();

    private async Task ReloadAsync()
    {
        _loading = true;
        _error = null;
        _errorDetails = null;

        try { _clients = await Api.GetClientsAsync() ?? new(); }
        catch (ApiException ex) { _error = ex.Message; _errorDetails = ex.Body; }
        catch (Exception ex) { _error = ex.Message; }
        finally { _loading = false; }
    }

    private async Task DisableAsync(Guid id)
    {
        _busy = true;
        _error = null;
        _errorDetails = null;

        try
        {
            await Api.DisableClientAsync(id);
            await ReloadAsync();
        }
        catch (ApiException ex) { _error = ex.Message; _errorDetails = ex.Body; }
        catch (Exception ex) { _error = ex.Message; }
        finally { _busy = false; }
    }
}
